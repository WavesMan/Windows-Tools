{
  "name": "windows-tools",
  "version": "0.0.2",
  "releaseStage": "Alpha",
  "description": "A collection of tools for Windows",
  "main": "./main/main.js",
  "scripts": {
    "postinstall": "node ./scripts/electron.js",
    "start": "set NODE_ENV=development&& electron .",
    "build": "set NODE_ENV=production&& electron-builder"
  },
  "author": "Windows Tools Team",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^35.0.0-alpha.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "glob": "^11.0.1"
  },
  "build": {
    "appId": "com.example.windows-tools",
    "productName": "Windows Tools",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!asset/resources/python/**"
    ],
    "extraResources": [
      {
        "from": "asset/resources/python",
        "to": "resources/python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "asset/resources/windows.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
